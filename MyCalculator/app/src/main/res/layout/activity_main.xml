<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/no7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/result"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:text="7"
        android:textSize="20dp" />

    <Button
        android:id="@+id/no8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/result"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@+id/no7"
        android:text="8"
        android:textSize="20dp" />

    <Button
        android:id="@+id/no9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:textSize="20dp"
        android:layout_below="@+id/result"
        android:layout_toRightOf="@+id/no8"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/clean"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="C"
        android:textSize="20dp"
        android:layout_below="@+id/result"
        android:layout_toRightOf="@+id/no9"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/cleanAll"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="AC"
        android:textSize="20dp"
        android:layout_below="@+id/result"
        android:layout_toRightOf="@+id/clean"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/no4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:textSize="20dp"
        android:layout_below="@+id/no7"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/no5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:textSize="20dp"
        android:layout_below="@+id/no7"
        android:layout_toRightOf="@+id/no4"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/no6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:textSize="20dp"
        android:layout_below="@+id/no7"
        android:layout_toRightOf="@+id/no5"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/sub"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:textSize="20dp"
        android:layout_below="@+id/no7"
        android:layout_toRightOf="@+id/no6"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/div"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        android:textSize="20dp"
        android:layout_below="@+id/no7"
        android:layout_toRightOf="@+id/sub"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/no1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="20dp"
        android:layout_below="@+id/no4"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/no2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:textSize="20dp"
        android:layout_below="@+id/no4"
        android:layout_toRightOf="@+id/no1"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/no3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:textSize="20dp"
        android:layout_below="@+id/no4"
        android:layout_toRightOf="@+id/no2"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/add"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:textSize="20dp"
        android:layout_below="@+id/no4"
        android:layout_toRightOf="@+id/no3"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/mul"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="*"
        android:textSize="20dp"
        android:layout_below="@+id/no4"
        android:layout_toRightOf="@+id/add"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/no0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0"
        android:textSize="20dp"
        android:layout_below="@+id/no1"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/equal"
        android:layout_width="161dp"
        android:layout_height="80dp"
        android:layout_below="@+id/no1"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@+id/no0"
        android:text="="
        android:textSize="20dp" />

    <Button
        android:id="@+id/point"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:textSize="20dp"
        android:layout_below="@+id/no1"
        android:layout_toRightOf="@+id/equal"
        android:layout_margin="1dp"/>

    <Button
        android:id="@+id/percent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/no1"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@+id/point"
        android:text="%"
        android:textSize="20dp" />

</RelativeLayout>